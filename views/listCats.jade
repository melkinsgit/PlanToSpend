// list cats jade
extends layout

// The Categories model is:
//	housing: String,
//	creditCards: [String],
//	utils: [String],
//	carPayment: String, (don't need any user input - just yes no)
//	carIns: String, (don't need any user input - just yes no)
//	healthIns: String, (don't need any user input - just yes no)
//	mine: [String],
//	loans: [String],
//	savings: [String]
extends layout
block content
	h1 Here are your categories, which you can update any time
	form(action='/updateCats' method="post")
		input(type="submit" value="Update Categories")

	form(action="/showCats" method="get")
	if(userCats.length===0)
		p You haven't entered any items in your spending plan yet.
	else
		ul
			for cat in userCats
				li Housing: #{cat.housing}
				li Utilities: #{cat.utils}
					ul
						if(cat.utils.length===1 && cat.utils[0]==='')
							li No utilities
						else
							for util in cat.utils
								li #{util}
				li Car Payment: #{cat.carPayment} 
				li Car Insurance: #{cat.carIns}
				li Health Insurance: #{cat.healthIns}
				li Your Categories:
					ul
						if(cat.mine.length===1 && cat.mine[0]==='')
							li No categories you defined
						else
							for me in cat.mine
								li #{me}
				li Credit Cards:
					ul
						if(cat.creditCards.length===1 && cat.creditCards[0]==='')
							li No credit cards
						else
							for card in cat.creditCards
								li #{card}
				li Loans: 
					ul
						if(cat.loans.length===1 && cat.loans[0]==='')
							li No loans
						else
							for loan in cat.loans
								li #{loan}
				li Savings:
					ul
						if(cat.savings.length===1 && cat.savings[0]==='')
							li No savings
						else
							for saving in cat.savings
								li #{saving}
			
	hr
	footer
		include navigation
		form(action='/logout' method='get')
			input(type="submit" value="Logout")